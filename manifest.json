{
    "name": "Multi Subsitles Youtube",
    "description": "Display as many subtitles as you like. Different languages, translated, auto-generated. NO dependency on third-party server",
    "manifest_version": 3,
    "version": "0.0.1",
    "homepage_url": "https://tanovsky.github.io",
    "permissions": [
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "https://www.youtube.com/*"
    ],
    "action": {
        "default_title": "Multi Subsitles Youtube",
        "default_popup": "popup.html",
        "default_icon": {
            "128": "icon.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "128": "icon.png"
    },
    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/watch*", "http://localhost/*", "http://127.0.0.1/*"],
            "js": ["inject.js"],
            "run_at": "document_start"
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "{e624fdbf-02a8-4f25-90d8-47d23347cf9b}"
        }
    }
} 
